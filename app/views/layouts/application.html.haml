!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Redfxstock"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#", :name => "top"} Redfxstock
          .nav-collapse.collapse
            %ul.nav
              %li
                = link_to root_path do
                  %i.icon-home
                  Home
              %li.divider-vertical
              %li
                = link_to categories_path do
                  %i.icon-file
                  Browse By Categories
              %li.divider-vertical
              %li
                %a{:href => "#"}
                  %i.icon-envelope
                  Messages
              %li.divider-vertical
              %li
                %a{:href => "#"}
                  %i.icon-signal
                  Stats
              %li.divider-vertical
              %li.dropdown
                = link_to '#', data: { target: '#', toggle: 'dropdown', role: 'button' }, class: '.dropdown-toggle', id: 'dLlabel' do
                  Admin
                  %b.caret
                %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                  = link_to admin_categories_path do
                    %i.icon-lock
                    Categories
                  %br
                  = link_to admin_expertises_path do
                    %i.icon-lock
                    Gallery
                  %br
                  = link_to admin_expertises_path do
                    %i.icon-lock
                    Expertises
                  %br
                  = link_to admin_roles_path do
                    %i.icon-lock
                    Roles
                  %br
                  = link_to admin_users_path do
                    %i.icon-lock
                    Users
              %li.divider-vertical
            %ul.nav.pull-right
              = render 'devise/sessions/sign_in'
    .container-fluid
      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Sidebar
              %li= link_to "Categories", categories_path
              %li= link_to "Gallery", galleries_path
              %li= link_to "Expertises", expertises_path
              %li= link_to "Roles", roles_path
              %li= link_to "Users", users_path
        .span9
          = bootstrap_flash
          - if !sign_in_page?
            = yield
    
      %footer
        %p &copy; Company 2013
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
/ /.nav-collapse
/ /.container-fluid
/ /.navbar-inner
/ /.navbar


.page-header.row
  %h1=t '.title', :default => 'Category'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Parent Category
      %th Created At
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category_path(category)
        %td= category.parent_id
        %td=l category.created_at

= paginate @categories

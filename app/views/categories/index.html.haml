.page-header.row
  %h1=t '.title', :default => 'Categories'
.pagination
  = paginate @categories

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Parent Category
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category_path(category)
        %td= category.parent_id
.pagination
  = paginate @categories

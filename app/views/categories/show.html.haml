.page-header
  %h1=t '.title', :default => 'Category'

%p
  %strong Name:
  = @category.name
%p
  %strong Parent Category:
  = @category.parent_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), categories_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_category_path(@category), :class => 'btn'

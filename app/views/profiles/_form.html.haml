= simple_form_for @profile, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :location
  = f.input :username
  = f.input :gender
  = f.input :dob
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), profiles_path, :class => 'btn'

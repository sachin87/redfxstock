= simple_form_for @profile, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :location
  = f.input :username
  = f.input :gender
  = f.input :dob, as: :string, input_html: { class: 'datepicker' }
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('Cancel', profiles_path, :class => 'btn')

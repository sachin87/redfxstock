.page-header
  %h1=t '.title', :default => 'Profile'

%p
  %strong Name:
  = @profile.name
%p
  %strong Location:
  = @profile.location
%p
  %strong UserName:
  = @profile.username
%p
  %strong Gender:
  = @profile.gender
%p
  %strong Dob:
  = @profile.dob

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), profiles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_profile_path(@profile), :class => 'btn'

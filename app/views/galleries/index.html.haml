- model_class = Gallery
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Created At

  %tbody
    - @galleries.each do |gallery|
      %tr
        %td= link_to gallery.name, gallery_path(gallery)
        %td=l gallery.created_at

= paginate @galleries

.page-header
  .row
    %h1=t '.title', :default => 'Role'
    = link_to('New Role', new_admin_role_path, :class => 'btn btn-primary pull-right')

= paginate @resources

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Created At
      %th Actions
  %tbody
    - @resources.each do |role|
      %tr
        %td= link_to role.name, admin_role_path(role)
        %td= role.created_at.strftime("%B %d at %I:%M %p")
        %td
          = link_to('Edit', edit_admin_role_path(role), :class => 'btn btn-mini')
          = link_to('Delete', admin_role_path(role), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger')

= paginate @resources

.page-header
  %h1=t '.title', :default => 'Role'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @resources.each do |role|
      %tr
        %td= link_to role.name, admin_role_path(role)
        %td=l role.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_role_path(role), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_role_path(role), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @resources

= link_to t('.new', :default => t("helpers.links.new")), new_admin_role_path, :class => 'btn btn-primary'

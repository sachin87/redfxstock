.page-header
  .row
    %h1=t '.title', :default => 'Category'
    = link_to('New Category', new_admin_category_path, :class => 'btn btn-primary pull-right')
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Parent Category
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @resources.each do |category|
      %tr
        %td= link_to category.name, admin_category_path(category)
        %td= category.parent_name
        %td= category.created_at.strftime("%B %d at %I:%M %p")
        %td
          = link_to('Edit', edit_admin_category_path(category), :class => 'btn btn-mini')
          = link_to('Delete', admin_category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger')

.pagination
  = paginate @resources

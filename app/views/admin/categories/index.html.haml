.page-header
  %h1=t '.title', :default => 'Category'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Parent Category
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @resources.each do |category|
      %tr
        %td= link_to category.name, admin_category_path(category)
        %td= category.parent_name
        %td=l category.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_category_path(category), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @resources

= link_to t('.new', :default => t("helpers.links.new")), new_admin_category_path, :class => 'btn btn-primary'

= simple_form_for [:admin, @resource], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :parent_id, as: :select, collection: category_list(f.object), input_html: { class: 'chosen-select' }
  %br
  = f.button :submit, :class => 'btn btn-primary'
  = link_to('Cancel', admin_categories_path, :class => 'btn')

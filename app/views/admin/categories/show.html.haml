- model_class = Category
.page-header
  %h1=t '.title', default: model_class.model_name.human

%p
  %strong Name:
  = @resource.name
%p
  %strong Parent Category:
  = @resource.parent_name

%br

= link_to('Back', admin_categories_path, class: 'btn')
= link_to('Edit', edit_admin_category_path(@resource), class: 'btn')
= link_to('Delete', admin_category_path(@resource), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger')

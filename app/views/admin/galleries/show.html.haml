- model_class = Gallery
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong Name:
  = @resource.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_galleries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_gallery_path(@resource), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_gallery_path(@resource), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

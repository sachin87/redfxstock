- model_class = Gallery
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @resources.each do |gallery|
      %tr
        %td= link_to gallery.name, gallery_path(gallery)
        %td=l gallery.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_gallery_path(gallery), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_gallery_path(gallery), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @resources

= link_to t('.new', :default => t("helpers.links.new")), new_admin_gallery_path, :class => 'btn btn-primary'

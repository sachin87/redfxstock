.page-header
  .row
    %h1=t '.title', :default => 'Gallery'
    = link_to('New Gallery', new_admin_gallery_path, :class => 'btn btn-primary pull-right')

= paginate @resources

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @resources.each do |gallery|
      %tr
        %td= link_to gallery.name, admin_gallery_path(gallery)
        %td= gallery.created_at.strftime("%B %d at %I:%M %p")
        %td
          = link_to('Edit', edit_admin_gallery_path(gallery), :class => 'btn btn-mini')
          = link_to('Delete', admin_gallery_path(gallery), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger')

= paginate @resources

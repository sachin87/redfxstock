- model_class = Upload
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:gallery_id)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @resources.each do |upload|
      %tr
        %td= link_to upload.name, upload_path(upload)
        %td= upload.gallery.name
        %td= upload.image
        %td=l upload.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_upload_path(upload), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_upload_path(upload), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_upload_path, :class => 'btn btn-primary'

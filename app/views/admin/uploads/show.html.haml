.page-header
  %h1=t '.title', :default => 'Upload'

%p
  %strong Name:
  = @resource.name
%p
  %strong Gallery:
  = @resource.gallery_name
%p
  %strong Image
  = image_tag @resource.image
%p
  %strong Owner
  = image_tag @resource.user_name

%br

= link_to('Back', admin_uploads_path, :class => 'btn')
= link_to('Edit', edit_admin_upload_path(@resource), :class => 'btn')
= link_to('Delete', admin_upload_path(@resource), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger')

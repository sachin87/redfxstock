.page-header
  %h1=t '.title', :default => 'Upload'

%p
  %strong Name:
  = @resource.name
%p
  %strong Gallery:
  = @resource.gallery_name
%p
  %strong Image
  = image_tag @resource.image

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_uploads_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_upload_path(@resource), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_upload_path(@resource), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

- model_class = Profile
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong Name:
  = @profile.name
%p
  %strong Location:
  = @profile.location
%p
  %strong UserName:
  = @profile.username
%p
  %strong Gender:
  = @profile.gender
%p
  %strong DOB:
  = @profile.dob

%br

= link_to('Back', admin_profiles_path, class: 'btn')
= link_to('Edit', edit_sdmin_profile_path(@profile), class: 'btn')
= link_to('Delete', admin_profile_path(@profile), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger')

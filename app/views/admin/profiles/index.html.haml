.page-header
  .row
    %h1=t '.title', :default => 'Profile'
    = link_to('New Profile', new_admin_profile_path, :class => 'btn btn-primary pull-right')
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Location
      %th Username
      %th Gender
      %th Date of birth
      %th Created At
      %th Actions
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.name, admin_profile_path(profile)
        %td= profile.location
        %td= profile.username
        %td= profile.gender
        %td= profile.dob
        %td= profile.created_at.strftime("%B %d at %I:%M %p")
        %td
          = link_to('Edit', edit_admin_profile_path(profile), :class => 'btn btn-mini')
          = link_to('Delete', admin_profile_path(profile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger')

= paginate @resources

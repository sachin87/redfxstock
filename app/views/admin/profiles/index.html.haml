.page-header
  %h1=t '.title', :default => 'Profile'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Location
      %th Username
      %th Gender
      %th Date of birth
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.name, admin_profile_path(profile)
        %td= profile.location
        %td= profile.username
        %td= profile.gender
        %td= profile.dob
        %td=l profile.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_profile_path(profile), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_profile_path(profile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @resources

= link_to t('.new', :default => t("helpers.links.new")), new_admin_profile_path, :class => 'btn btn-primary'

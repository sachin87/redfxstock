.page-header
  %h1=t '.title', :default => 'User'

%p
  %strong Email:
  = @user.email
%p
  %strong UserName:
  = @user.username

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_users_path, :class => 'btn'
  - if current_user == @user
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(@user), :class => 'btn'

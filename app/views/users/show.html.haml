%p
  %strong= model_class.human_attribute_name(:confirmation_sent_at) + ':'
  %br
  = @user.confirmation_sent_at
%p
  %strong= model_class.human_attribute_name(:unconfirmed_email) + ':'
  %br
  = @user.unconfirmed_email
%p
  %strong= model_class.human_attribute_name(:failed_attempts) + ':'
  %br
  = @user.failed_attempts
%p
  %strong= model_class.human_attribute_name(:unlock_token) + ':'
  %br

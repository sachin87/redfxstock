- model_class = Expertise
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @expertises.each do |expertise|
      %tr
        %td= link_to expertise.name, expertise_path(expertise)
        %td=l expertise.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_expertise_path(expertise), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), expertise_path(expertise), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @expertises

= link_to t('.new', :default => t("helpers.links.new")), new_expertise_path, :class => 'btn btn-primary'

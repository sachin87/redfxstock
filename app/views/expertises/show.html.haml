- model_class = Expertise
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @expertise.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), expertises_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_expertise_path(@expertise), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), expertise_path(@expertise), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

.page-header
  %h1=@upload.name

%p
  = image_tag @upload.image.thumb, class: 'img-polaroid'

= link_to '#', class: 'btn btn-small' do
  %i.icon-star
  Star

%p
  %strong Gallery:
  = @upload.gallery_name

%p
  %strong Owner:
  = @upload.user_name

- if @upload.user == current_user
  = link_to('Edit', edit_upload_path(@upload), :class => 'btn btn-small')
  = link_to('Delete', upload_path(@upload), :method => :delete, :data => { :confirm => t('.confirm',
                                            :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                             :class => 'btn btn-small btn-danger')

%br

%h6 Comments

= render 'comments/comments', commentable: @upload

.container
  .row{style: "margin-top:40px;"}
    .col-md-6
      .well.well-sm
        .text-right
          %a#open-review-box.btn.btn-success.btn-green{href: "#reviews-anchor"} Leave a Review
        #post-review-box.row{style: "display:none;"}
          .col-md-12
            %form{"accept-charset" => "UTF-8", action: "", method: "post"}
              %input#ratings-hidden{name: "rating", type: "hidden"}/
              %textarea#new-review.form-control.animated{cols: "50", name: "comment", placeholder: "Enter your review here...", rows: "5"}
              .text-right
                .stars.starrr{"data-rating" => "0"}
                %a#close-review-box.btn.btn-danger.btn-sm{href: "#", style: "display:none; margin-right: 10px;"}
                  %span.glyphicon.glyphicon-remove>
                  Cancel
                %button.btn.btn-success.btn-lg{type: "submit"} Save


= simple_form_for @resource, html: { class: 'form-horizontal' } do |f|
  = f.input :email
  = f.input :username
  = f.input :current_password
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to('Cancel', users_path, class: 'btn')
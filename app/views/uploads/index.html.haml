.page-header.row
  %h1=t '.title', :default => 'Upload'
  = link_to t('.new', :default => t("helpers.links.new")), new_upload_path, :class => 'btn btn-primary pull-right'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Gallery
      %th Image
      %th Owner
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @uploads.each do |upload|
      %tr
        %td= link_to upload.name, upload_path(upload)
        %td= upload.gallery.name
        %td= image_tag upload.image
        %td= upload.user_name
        %td=l upload.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_upload_path(upload), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), upload_path(upload), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

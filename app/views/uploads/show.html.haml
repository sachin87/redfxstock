.page-header
  %h1=t '.title', :default => 'Upload'

%p
  %strong Name:
  = @upload.name
%p
  %strong Gallery:
  = @upload.gallery_name
%p
  %strong Image:
  = image_tag @upload.image
%p
  %strong Owner:
  = image_tag @upload.user_name

= simple_form_for @upload, :html => { :class => 'form-horizontal', :id => 'jquery-form' } do |f|
  = f.input :image, as: :file, multipe: true, label: 'Add More Images', hint: 'Add multiple at a time.'
  .form-actions
    = f.button :submit, :class => 'btn-primary'

.form-actions
  = link_to('Back', uploads_path, :class => 'btn')
  = link_to('Edit', edit_upload_path(@upload), :class => 'btn')

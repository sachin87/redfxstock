.dropdown-menu{:style => "padding: 60px; padding-bottom: 0px;"}
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.input :email, required: true, label: false, autofocus: true, placeholder: 'Email', input_html: { style: "margin-bottom: 15px;" }
    = f.input :password, required: true, label: false, placeholder: 'Password', input_html: { style: "margin-bottom: 15px;" }
    = f.input :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation', input_html: { style: "margin-bottom: 15px;" }
    = f.button :submit, "Sign up", class: 'btn btn-primary btn-block'
  = render "devise/shared/links"